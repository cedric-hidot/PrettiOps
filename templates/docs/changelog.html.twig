{% extends 'base.html.twig' %}

{% block title %}Changelog - PrettiOps{% endblock %}

{% block body_class %}liquid-glass-page{% endblock %}

{% block content %}
    <section class="glass-section">
        <div class="glass-container">
            <div class="text-center mb-12">
                <h1 class="glass-title h1">Changelog</h1>
                <p class="glass-text lead">Stay up to date with the latest improvements and features</p>
            </div>

            <div class="glass-card">
                <div class="mb-8">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="glass-badge">v1.2.0</span>
                        <span class="glass-text">January 24, 2025</span>
                    </div>
                    <h3 class="glass-title h3 mb-3">Liquid Glass Design System</h3>
                    <ul class="space-y-2">
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Introduced new liquid glass morphism design system
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Added polymorphic gradient backgrounds with animations
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Refined UI components for technical audience
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Improved navigation with Resources dropdown
                        </li>
                    </ul>
                </div>

                <div class="mb-8">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="glass-badge">v1.1.0</span>
                        <span class="glass-text">January 15, 2025</span>
                    </div>
                    <h3 class="glass-title h3 mb-3">Editor Enhancements</h3>
                    <ul class="space-y-2">
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Added CodeMirror 6 with advanced syntax highlighting
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Implemented real-time preview
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Added support for 150+ programming languages
                        </li>
                    </ul>
                </div>

                <div class="mb-8">
                    <div class="flex items-center gap-3 mb-4">
                        <span class="glass-badge">v1.0.0</span>
                        <span class="glass-text">January 1, 2025</span>
                    </div>
                    <h3 class="glass-title h3 mb-3">Initial Release</h3>
                    <ul class="space-y-2">
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Core snippet editor functionality
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            User authentication and dashboard
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Email preview and sharing features
                        </li>
                        <li class="glass-text flex items-start gap-2">
                            <span class="text-green-500">✓</span>
                            Basic integrations support
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}