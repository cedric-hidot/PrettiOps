{#
    Flash Messages Component
    Displays flash messages with auto-dismiss functionality
#}

{% if app.flashes is not empty %}
    <div class="flash-messages-container fixed top-20 right-4 z-40 space-y-3" role="region" aria-label="Flash Messages">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div 
                    class="flash-message alert alert-{{ label == 'error' ? 'error' : (label == 'warning' ? 'warning' : (label == 'success' ? 'success' : 'info')) }} max-w-sm w-full shadow-lg animate-slide-in-right"
                    role="{{ label == 'error' ? 'alert' : 'status' }}"
                    aria-live="{{ label == 'error' ? 'assertive' : 'polite' }}"
                    data-controller="flash-message"
                    data-flash-message-auto-dismiss-value="{{ label != 'error' }}"
                    data-flash-message-duration-value="{{ label == 'error' ? 0 : 5000 }}"
                >
                    <div class="flex">
                        {# Icon #}
                        <div class="flex-shrink-0">
                            {% if label == 'success' %}
                                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            {% elseif label == 'error' %}
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            {% elseif label == 'warning' %}
                                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            {% else %}
                                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                </svg>
                            {% endif %}
                        </div>
                        
                        {# Message Content #}
                        <div class="ml-3 flex-1">
                            <p class="text-sm text-gray-700">
                                {{ message|raw }}
                            </p>
                        </div>
                        
                        {# Close Button #}
                        <div class="ml-4 flex-shrink-0 flex">
                            <button 
                                class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200"
                                data-action="click->flash-message#dismiss"
                                aria-label="Dismiss message"
                            >
                                <span class="sr-only">Close</span>
                                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    
    {# Flash Message Stimulus Controller #}
    <script>
        // Inline flash message controller for immediate functionality
        document.addEventListener('DOMContentLoaded', function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            
            flashMessages.forEach(function(message) {
                const autoDismiss = message.dataset.flashMessageAutoDismissValue === 'true';
                const duration = parseInt(message.dataset.flashMessageDurationValue) || 5000;
                
                // Auto-dismiss functionality
                if (autoDismiss && duration > 0) {
                    setTimeout(function() {
                        dismissMessage(message);
                    }, duration);
                }
                
                // Manual dismiss functionality
                const closeButton = message.querySelector('[data-action*="flash-message#dismiss"]');
                if (closeButton) {
                    closeButton.addEventListener('click', function() {
                        dismissMessage(message);
                    });
                }
            });
            
            function dismissMessage(message) {
                message.classList.add('animate-slide-out-right');
                
                setTimeout(function() {
                    if (message.parentNode) {
                        message.parentNode.removeChild(message);
                    }
                }, 300);
            }
        });
    </script>
    
    {# CSS for animations #}
    <style>
        @keyframes slide-in-right {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
        
        @keyframes slide-out-right {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }
        
        .animate-slide-in-right {
            animation: slide-in-right 0.3s ease-out forwards;
        }
        
        .animate-slide-out-right {
            animation: slide-out-right 0.3s ease-in forwards;
        }
    </style>
{% endif %}