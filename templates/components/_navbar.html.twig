{#
 * Enhanced Navbar Component - Tiptap-inspired
 * 
 * Glassmorphism navigation with mega menu structure and smooth animations
 * Supports dynamic content blocks for flexible layouts
#}

<nav 
    class="tt-navbar fixed top-0 left-0 right-0 z-50 backdrop-blur-lg"
    data-controller="navigation"
    data-navigation-scroll-threshold-value="100"
    data-navigation-mega-menu-delay-value="200"
    data-navigation-enable-glassmorphism-value="true"
    data-navigation-target="navbar"
    role="navigation" 
    aria-label="Main navigation"
>
    <div class="tt-navbar-strip max-w-7xl mx-auto flex items-center justify-between px-6 py-4 min-h-[72px]">
        
        <!-- Brand Logo -->
        <a 
            href="{{ path('homepage') }}" 
            class="tt-navbar-logo flex items-center gap-3 text-decoration-none transition-transform duration-300"
            data-navigation-target="logo"
            aria-label="PrettiOps Home"
        >
            <div class="logo w-10 h-10 bg-gradient-to-br from-purple-600 to-purple-700 rounded-xl flex items-center justify-center text-white font-bold text-lg shadow-lg" aria-hidden="true">
                P
            </div>
            <span class="hidden md:block text-xl font-bold text-gray-900">PrettiOps</span>
        </a>
        
        {# Dynamic Center Content (for editor title, search, etc.) #}
        {% block navbar_center %}
            {# Default center content can go here if needed #}
        {% endblock %}
        
        {# Dynamic Actions Section (for editor/dashboard specific actions) #}
        {% block navbar_actions %}
            {# Default desktop navigation for non-authenticated pages #}
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="navbar-nav hidden md:flex items-center">
                    {# Navigation Links with Mega Menu #}
                    <div class="relative" data-controller="mega-menu" data-mega-menu-delay-value="150">
                        <button 
                            class="navbar-link flex items-center gap-1"
                            data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                            data-mega-menu-target="trigger"
                        >
                            Features
                            <svg class="w-4 h-4 transition-transform duration-200" data-mega-menu-target="arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        
                        {# Features Mega Menu #}
                        <div 
                            class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 opacity-0 invisible transition-all duration-300 z-50"
                            data-mega-menu-target="menu"
                            data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                        >
                            {% include 'components/_mega_menu_features.html.twig' %}
                        </div>
                    </div>
                    
                    <a href="{{ path('pricing') }}" class="navbar-link">
                        Pricing
                    </a>
                    
                    <div class="relative" data-controller="mega-menu" data-mega-menu-delay-value="150">
                        <button 
                            class="navbar-link flex items-center gap-1"
                            data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                            data-mega-menu-target="trigger"
                        >
                            Resources
                            <svg class="w-4 h-4 transition-transform duration-200" data-mega-menu-target="arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        
                        {# Resources Mega Menu #}
                        <div 
                            class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 opacity-0 invisible transition-all duration-300 z-50"
                            data-mega-menu-target="menu"
                            data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                        >
                            {% include 'components/_mega_menu_resources.html.twig' %}
                        </div>
                    </div>
                    
                    {# Guest User Actions #}
                    <div class="flex items-center gap-3">
                        <a href="{{ path('login') }}" class="navbar-link">
                            Sign In
                        </a>
                        <a href="{{ path('register') }}" class="btn btn-primary btn-sm">
                            Get Started Free
                        </a>
                    </div>
                </div>
            {% else %}
                {# Default authenticated navigation if not overridden #}
                <div class="navbar-nav hidden md:flex">
                    <a href="{{ path('dashboard') }}" class="navbar-link {% if app.request.get('_route') == 'dashboard' %}active{% endif %}">Dashboard</a>
                    <a href="{{ path('editor') }}" class="navbar-link {% if app.request.get('_route') == 'editor' %}active{% endif %}">Editor</a>
                    <a href="{{ path('analytics') }}" class="navbar-link {% if app.request.get('_route') == 'analytics' %}active{% endif %}">Analytics</a>
                    <a href="{{ path('settings') }}" class="navbar-link {% if app.request.get('_route') == 'settings' %}active{% endif %}">Settings</a>
                    
                    {# User Avatar #}
                    <div class="user-avatar" title="{{ app.user.fullName|default(app.user.email) }}">
                        {% if app.user.avatar %}
                            <img src="{{ asset(app.user.avatar) }}" alt="{{ app.user.fullName }}" class="w-8 h-8 rounded-full">
                        {% else %}
                            {{ app.user.initials|default(app.user.email|first|upper) }}
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endblock %}
        
        {# Mobile Menu Button #}
        <div class="md:hidden">
            <button 
                class="p-2 text-gray-600 hover:text-gray-900 transition-colors duration-200"
                data-controller="mobile-menu"
                data-action="click->mobile-menu#toggle"
                aria-label="Toggle mobile menu"
                aria-expanded="false"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" data-mobile-menu-target="hamburger">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" data-mobile-menu-target="close">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>
    
    {# Mobile Menu #}
    <div 
        class="md:hidden hidden border-t border-gray-200 bg-white"
        data-mobile-menu-target="menu"
    >
        <div class="px-4 py-3 space-y-3">
            {# Mobile Navigation Links #}
            <a href="{{ path('features') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                Features
            </a>
            <a href="{{ path('pricing') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                Pricing
            </a>
            <a href="{{ path('documentation') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                Documentation
            </a>
            
            {# Mobile User Actions #}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="border-t border-gray-100 pt-3 mt-3">
                    <div class="flex items-center gap-3 mb-3">
                        {% if app.user.avatar %}
                            <img 
                                src="{{ asset(app.user.avatar) }}" 
                                alt="{{ app.user.displayName }}"
                                class="w-10 h-10 rounded-full border-2 border-gray-200"
                            >
                        {% else %}
                            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                                <span class="text-purple-600 font-medium">
                                    {{ app.user.displayName|first|upper }}
                                </span>
                            </div>
                        {% endif %}
                        <div>
                            <p class="font-medium text-gray-900">{{ app.user.displayName }}</p>
                            <p class="text-sm text-gray-500">{{ app.user.email }}</p>
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <a href="{{ path('dashboard') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                            Dashboard
                        </a>
                        <a href="{{ path('snippets_index') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                            My Snippets
                        </a>
                        <a href="{{ path('profile_settings') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                            Settings
                        </a>
                        <a href="{{ path('logout') }}" class="block py-2 text-red-600 hover:text-red-700">
                            Sign Out
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="border-t border-gray-100 pt-3 mt-3 space-y-2">
                    <a href="{{ path('login') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        Sign In
                    </a>
                    <a href="{{ path('register') }}" class="btn btn-primary w-full">
                        Get Started Free
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</nav>