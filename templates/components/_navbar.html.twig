{#
 * Enhanced Navbar Component - Tiptap-inspired
 * 
 * Glassmorphism navigation with mega menu structure and smooth animations
 * Supports dynamic content blocks for flexible layouts
#}

<nav 
    class="tt-navbar fixed top-0 left-0 right-0 backdrop-blur-lg"
    style="z-index: 10000 !important;"
    data-controller="navigation"
    data-navigation-scroll-threshold-value="100"
    data-navigation-mega-menu-delay-value="200"
    data-navigation-enable-glassmorphism-value="true"
    data-navigation-scrolled-class="scrolled"
    data-navigation-mobile-open-class="mobile-open"
    data-navigation-dropdown-open-class="dropdown-open"
    data-navigation-target="navbar"
    role="navigation" 
    aria-label="Main navigation"
>
    <div class="tt-navbar-strip max-w-7xl mx-auto flex items-center justify-between px-6 py-4 min-h-[72px]">
        
        <!-- Brand Logo -->
        <a 
            href="{{ path('homepage') }}" 
            class="tt-navbar-logo flex items-center gap-3 text-decoration-none transition-transform duration-300"
            data-navigation-target="logo"
            aria-label="PrettiOps Home"
        >
            <div class="logo w-10 h-10 bg-gradient-to-br from-purple-600 to-purple-700 rounded-xl flex items-center justify-center text-white font-bold text-lg shadow-lg" aria-hidden="true">
                P
            </div>
            <span class="hidden md:block text-xl font-bold text-gray-900">PrettiOps</span>
        </a>
        
        {# Dynamic Center Content (for editor title, search, etc.) #}
        {% block navbar_center %}
            {# Default center content can go here if needed #}
        {% endblock %}
        
        {# Dynamic Actions Section (for editor/dashboard specific actions) #}
        {% block navbar_actions %}
            {# Default desktop navigation for non-authenticated pages #}
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="navbar-nav hidden md:flex items-center">
                    {# Navigation Links with Mega Menu #}
                    <div class="flex items-center space-x-8">
                        <div class="relative" data-controller="mega-menu" data-mega-menu-delay-value="150">
                            <button 
                                class="navbar-link flex items-center gap-2 px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200"
                                data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                                data-mega-menu-target="trigger"
                            >
                                Features
                                <svg class="w-4 h-4 transition-transform duration-200" data-mega-menu-target="arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            
                            {# Features Mega Menu #}
                            <div 
                                class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 hidden transition-all duration-300"
                                data-mega-menu-target="menu"
                                data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                                style="z-index: 999999 !important; pointer-events: auto;"
                            >
                                {% include 'components/_mega_menu_features.html.twig' %}
                            </div>
                        </div>
                        
                        <a href="{{ path('pricing') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200">
                            Pricing
                        </a>
                        
                        <a href="{{ path('integrations') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200">
                            Integrations
                        </a>
                        
                        <div class="relative" data-controller="mega-menu" data-mega-menu-delay-value="150">
                            <button 
                                class="navbar-link flex items-center gap-2 px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200"
                                data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                                data-mega-menu-target="trigger"
                            >
                                Resources
                                <svg class="w-4 h-4 transition-transform duration-200" data-mega-menu-target="arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            
                            {# Resources Mega Menu #}
                            <div 
                                class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 hidden transition-all duration-300"
                                data-mega-menu-target="menu"
                                data-action="mouseenter->mega-menu#show mouseleave->mega-menu#hide"
                                style="z-index: 999999 !important; pointer-events: auto;"
                            >
                                {% include 'components/_mega_menu_resources.html.twig' %}
                            </div>
                        </div>
                    </div>
                    
                    {# Guest User Actions #}
                    <div class="flex items-center space-x-4 ml-8">
                        <a href="{{ path('login') }}" class="glass-btn font-medium">
                            Sign In
                        </a>
                        <a href="{{ path('register') }}" class="glass-btn primary font-semibold">
                            Get Started Free
                        </a>
                    </div>
                </div>
            {% else %}
                {# Hybrid navigation for authenticated users - includes both app and public pages #}
                <div class="navbar-nav hidden md:flex items-center">
                    <div class="flex items-center space-x-6">
                        {# Core Application Links #}
                        <a href="{{ path('app_dashboard') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200 {% if app.request.get('_route') == 'app_dashboard' %}text-purple-600 border-b-2 border-purple-600{% endif %}">Dashboard</a>
                        <a href="{{ path('app_editor') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200 {% if app.request.get('_route') == 'app_editor' %}text-purple-600 border-b-2 border-purple-600{% endif %}">Editor</a>
                        <a href="{{ path('app_snippets') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200 {% if app.request.get('_route') == 'app_snippets' %}text-purple-600 border-b-2 border-purple-600{% endif %}">Snippets</a>
                        
                        {# Resources/Info Dropdown - Combines public pages #}
                        <div class="relative" data-controller="dropdown">
                            <button 
                                class="navbar-link flex items-center gap-2 px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200"
                                data-action="click->dropdown#toggle"
                                data-dropdown-target="trigger"
                            >
                                Resources
                                <svg class="w-4 h-4 transition-transform duration-200" data-dropdown-target="arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                            
                            <div 
                                class="absolute top-full left-0 mt-2 w-56 glass-card solid shadow-2xl transition-all duration-200 z-[9999] hidden"
                                data-dropdown-target="menu"
                                style="backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);"
                            >
                                <div class="py-2">
                                    <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Product</div>
                                    <a href="{{ path('features') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-purple-600">
                                        <div class="flex items-center gap-3">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span>Features</span>
                                        </div>
                                    </a>
                                    <a href="{{ path('pricing') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-purple-600">
                                        <div class="flex items-center gap-3">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span>Pricing</span>
                                        </div>
                                    </a>
                                    <a href="{{ path('integrations') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-purple-600">
                                        <div class="flex items-center gap-3">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
                                            </svg>
                                            <span>Integrations</span>
                                        </div>
                                    </a>
                                    
                                    <div class="border-t border-gray-100 my-2"></div>
                                    <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Documentation</div>
                                    <a href="{{ path('api_docs') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-purple-600">
                                        <div class="flex items-center gap-3">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                                            </svg>
                                            <span>API Documentation</span>
                                        </div>
                                    </a>
                                    <a href="{{ path('changelog') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-purple-600">
                                        <div class="flex items-center gap-3">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                            </svg>
                                            <span>Changelog</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <a href="{{ path('app_analytics') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200 {% if app.request.get('_route') == 'app_analytics' %}text-purple-600 border-b-2 border-purple-600{% endif %}">Analytics</a>
                        <a href="{{ path('app_settings') }}" class="navbar-link px-3 py-2 text-gray-700 hover:text-purple-600 font-medium transition-colors duration-200 {% if app.request.get('_route') == 'app_settings' %}text-purple-600 border-b-2 border-purple-600{% endif %}">Settings</a>
                    </div>
                    
                    {# User Avatar with Dropdown #}
                    <div class="ml-6 flex items-center">
                        <div class="relative" data-controller="dropdown">
                            <button 
                                class="user-avatar w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center hover:bg-purple-200 transition-colors cursor-pointer" 
                                title="{{ app.user.fullName|default(app.user.email) }}"
                                data-action="click->dropdown#toggle"
                                data-dropdown-target="trigger"
                            >
                                {% if app.user.avatarUrl %}
                                    <img src="{{ asset(app.user.avatarUrl) }}" alt="{{ app.user.fullName }}" class="w-8 h-8 rounded-full">
                                {% else %}
                                    <span class="text-purple-600 font-semibold text-sm">{{ app.user.initials|default(app.user.email|first|upper) }}</span>
                                {% endif %}
                            </button>
                            
                            <div 
                                class="absolute top-full right-0 mt-2 w-48 glass-card solid shadow-2xl transition-all duration-200 z-[9999] hidden"
                                data-dropdown-target="menu"
                                style="backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);"
                            >
                                <div class="py-2">
                                    <div class="px-4 py-2 border-b border-gray-100">
                                        <p class="text-sm font-medium text-gray-900">{{ app.user.fullName|default(app.user.email) }}</p>
                                        <p class="text-xs text-gray-500">{{ app.user.email }}</p>
                                    </div>
                                    <a href="{{ path('app_settings') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-purple-600">
                                        Account Settings
                                    </a>
                                    <a href="{{ path('logout') }}" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                        Sign Out
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endblock %}
        
        {# Mobile Menu Button #}
        <div class="md:hidden">
            <button 
                class="p-2 text-gray-600 hover:text-gray-900 transition-colors duration-200"
                data-controller="mobile-menu"
                data-action="click->mobile-menu#toggle"
                aria-label="Toggle mobile menu"
                aria-expanded="false"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" data-mobile-menu-target="hamburger">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" data-mobile-menu-target="close">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>
    
    {# Mobile Menu #}
    <div 
        class="md:hidden hidden border-t border-gray-200 bg-white"
        data-mobile-menu-target="menu"
    >
        <div class="px-4 py-3 space-y-3">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {# Authenticated Mobile Navigation #}
                <div class="flex items-center gap-3 mb-3">
                    {% if app.user.avatarUrl %}
                        <img 
                            src="{{ asset(app.user.avatarUrl) }}" 
                            alt="{{ app.user.fullName }}"
                            class="w-10 h-10 rounded-full border-2 border-gray-200"
                        >
                    {% else %}
                        <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                            <span class="text-purple-600 font-medium">
                                {{ app.user.fullName|first|upper }}
                            </span>
                        </div>
                    {% endif %}
                    <div>
                        <p class="font-medium text-gray-900">{{ app.user.fullName }}</p>
                        <p class="text-sm text-gray-500">{{ app.user.email }}</p>
                    </div>
                </div>
                
                {# App Navigation #}
                <div class="space-y-2">
                    <a href="{{ path('app_dashboard') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        üìä Dashboard
                    </a>
                    <a href="{{ path('app_editor') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        ‚ú® Code Editor
                    </a>
                    <a href="{{ path('app_snippets') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        üìù My Snippets
                    </a>
                    <a href="{{ path('app_analytics') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        üìà Analytics
                    </a>
                    <a href="{{ path('app_settings') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        ‚öôÔ∏è Settings
                    </a>
                </div>
                
                <div class="border-t border-gray-100 pt-3 mt-3">
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Resources</p>
                    <a href="{{ path('features') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        Features
                    </a>
                    <a href="{{ path('pricing') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        Pricing
                    </a>
                    <a href="{{ path('integrations') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        Integrations
                    </a>
                    <a href="{{ path('api_docs') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        API Documentation
                    </a>
                    <a href="{{ path('changelog') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        Changelog
                    </a>
                </div>
                
                <div class="border-t border-gray-100 pt-3 mt-3">
                    <a href="{{ path('logout') }}" class="block py-2 text-red-600 hover:text-red-700">
                        üö™ Sign Out
                    </a>
                </div>
            {% else %}
                {# Guest Mobile Navigation #}
                <a href="{{ path('features') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                    Features
                </a>
                <a href="{{ path('pricing') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                    Pricing
                </a>
                <a href="{{ path('integrations') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                    Integrations
                </a>
                <a href="{{ path('api_docs') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                    API Documentation
                </a>
                <a href="{{ path('changelog') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                    Changelog
                </a>
                
                <div class="border-t border-gray-100 pt-3 mt-3 space-y-2">
                    <a href="{{ path('login') }}" class="block py-2 text-gray-600 hover:text-gray-900">
                        Sign In
                    </a>
                    <a href="{{ path('register') }}" class="block py-2 text-center bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors duration-200">
                        Get Started Free
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</nav>