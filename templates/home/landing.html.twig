{% block page_scripts %}
<script>
// Enhanced landing page interactions
document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll for internal links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    
    // Track CTA button clicks
    document.querySelectorAll('.po-button[href*="register"]').forEach(button => {
        button.addEventListener('click', function() {
            if (window.gtag) {
                gtag('event', 'click', {
                    event_category: 'CTA',
                    event_label: 'Start Free Trial',
                    value: 1
                });
            }
        });
    });
    
    // Enhanced button interactions for landing page
    document.querySelectorAll('.po-button').forEach(button => {
        button.addEventListener('mouseenter', function() {
            this.style.transform = 'scale(1.02) translateY(-1px)';
        });
        
        button.addEventListener('mouseleave', function() {
            this.style.transform = 'scale(1) translateY(0)';
        });
    });
});
</script>
