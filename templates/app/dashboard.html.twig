{% extends 'base.html.twig' %}

{% block title %}Dashboard - PrettiOps{% endblock %}
{% block description %}Manage your code snippets and track engagement with beautiful analytics{% endblock %}

{% block body_class %}dashboard-page liquid-glass-page{% endblock %}
{% block body_controllers %}theme{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Dashboard styles included in main app bundle #}
{% endblock %}


{% block content %}
<main class="max-w-7xl mx-auto px-6 py-8" data-controller="dashboard">
    <!-- Dashboard Header -->
    <div class="page-header-glass flex items-center justify-between">
        <div>
            <h1 class="page-title">Dashboard</h1>
            <p class="page-subtitle">Manage your code snippets and track engagement</p>
        </div>
        <div class="flex items-center gap-4">
            <a href="{{ path('analytics') }}" class="btn-secondary-glass">
                <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/>
                    <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"/>
                </svg>
                Analytics
            </a>
            <a href="{{ path('editor') }}" class="btn-primary-glass">
                <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                </svg>
                New Snippet
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="stats-glass-card fade-in-glass">
            <div class="stats-number" data-dashboard-target="totalSnippets">{{ stats.totalSnippets ?? 0 }}</div>
            <div class="stats-label">Total Snippets</div>
            <div class="stats-change">
                {% if stats.snippetsChange >= 0 %}+{% endif %}{{ stats.snippetsChange ?? 0 }} this week
            </div>
        </div>
        
        <div class="stats-glass-card fade-in-glass" style="animation-delay: 0.1s">
            <div class="stats-number" data-dashboard-target="totalViews">{{ stats.totalViews ?? 0 }}</div>
            <div class="stats-label">Total Views</div>
            <div class="stats-change">
                {% if stats.viewsChangePercent >= 0 %}+{% endif %}{{ stats.viewsChangePercent ?? 0 }}% this month
            </div>
        </div>
        
        <div class="stats-glass-card fade-in-glass" style="animation-delay: 0.2s">
            <div class="stats-number" data-dashboard-target="emailSends">{{ stats.emailSends ?? 0 }}</div>
            <div class="stats-label">Email Sends</div>
            <div class="stats-change">
                {% if stats.emailSendsChange >= 0 %}+{% endif %}{{ stats.emailSendsChange ?? 0 }} this week
            </div>
        </div>
        
        <div class="stats-glass-card fade-in-glass" style="animation-delay: 0.3s">
            <div class="stats-number" data-dashboard-target="activeLinks">{{ stats.activeLinks ?? 0 }}</div>
            <div class="stats-label">Active Links</div>
            <div class="stats-change">
                {% if stats.activeLinksChange >= 0 %}+{% endif %}{{ stats.activeLinksChange ?? 0 }} expired
            </div>
        </div>
    </div>

    <!-- Content Header with Filters -->
    <div class="glass-panel flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-white">Recent Snippets</h2>
        <div class="flex items-center gap-4">
            <select 
                class="input-glass w-auto min-w-[140px]" 
                data-action="change->dashboard#filterByLanguage"
                data-dashboard-target="languageFilter"
                aria-label="Filter by language"
            >
                <option value="">All Languages</option>
                {% for language in languages %}
                    <option value="{{ language.value }}">{{ language.label }}</option>
                {% endfor %}
            </select>
            
            <select 
                class="input-glass w-auto min-w-[120px]" 
                data-action="change->dashboard#filterByStatus"
                data-dashboard-target="statusFilter"
                aria-label="Filter by status"
            >
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="expiring">Expiring Soon</option>
                <option value="expired">Expired</option>
            </select>
            
            <select 
                class="input-glass w-auto min-w-[130px]" 
                data-action="change->dashboard#sortSnippets"
                data-dashboard-target="sortFilter"
                aria-label="Sort snippets"
            >
                <option value="recent">Most Recent</option>
                <option value="popular">Most Popular</option>
                <option value="name">Name A-Z</option>
                <option value="views">Most Viewed</option>
            </select>
        </div>
    </div>

    <!-- Snippet Grid -->
    <div 
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" 
        data-dashboard-target="snippetGrid"
        data-search-target="container"
    >
        {% if snippets|length > 0 %}
            {% for snippet in snippets %}
                {% include 'components/_snippet_card.html.twig' with {
                    'snippet': snippet,
                    'show_preview': true,
                    'show_toolbar': true,
                    'show_stats': true,
                    'clickable': true
                } %}
            {% endfor %}
        {% else %}
            <!-- Empty State -->
            <div class="col-span-full glass-panel text-center py-16" data-dashboard-target="emptyState">
                <div class="mb-6">
                    <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">No snippets yet</h3>
                <p class="text-gray-300 mb-6 max-w-md mx-auto">
                    Create your first code snippet to get started with beautiful email sharing.
                </p>
                <a href="{{ path('editor') }}" class="btn-primary-glass">
                    <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                    </svg>
                    Create Your First Snippet
                </a>
            </div>
        {% endif %}
    </div>

    <!-- Loading State (Hidden by default) -->
    <div class="loading-state hidden" data-dashboard-target="loadingState">
        <div class="loading-spinner"></div>
        <p>Loading snippets...</p>
    </div>

    <!-- No Results State (Hidden by default) -->
    <div class="no-results-state hidden" data-dashboard-target="noResultsState">
        <div class="empty-icon" aria-hidden="true">üîç</div>
        <h3 class="empty-title">No snippets found</h3>
        <p class="empty-description">
            Try adjusting your search or filters, or create a new snippet to get started.
        </p>
        <div class="empty-actions">
            <button 
                class="btn btn-secondary"
                data-action="click->dashboard#clearFilters"
            >
                Clear Filters
            </button>
            <a href="{{ path('editor') }}" class="btn btn-primary">
                <span aria-hidden="true">‚ûï</span>
                Create New Snippet
            </a>
        </div>
    </div>
</main>

<!-- Modals and Overlays -->
<div 
    class="modal-overlay hidden" 
    data-dashboard-target="modalOverlay"
    data-action="click->dashboard#closeModal"
>
    <!-- Delete Confirmation Modal -->
    <div 
        class="modal modal-sm" 
        data-dashboard-target="deleteModal"
        data-action="click->dashboard#stopPropagation"
        role="dialog"
        aria-labelledby="delete-modal-title"
        aria-describedby="delete-modal-description"
    >
        <div class="modal-header">
            <h3 id="delete-modal-title" class="modal-title">Delete Snippet</h3>
            <button 
                class="modal-close"
                data-action="click->dashboard#closeModal"
                aria-label="Close modal"
            >
                <span aria-hidden="true">√ó</span>
            </button>
        </div>
        <div class="modal-body">
            <p id="delete-modal-description">
                Are you sure you want to delete "<span data-dashboard-target="deleteSnippetTitle"></span>"? 
                This action cannot be undone.
            </p>
        </div>
        <div class="modal-footer">
            <button 
                class="btn btn-secondary"
                data-action="click->dashboard#closeModal"
            >
                Cancel
            </button>
            <button 
                class="btn btn-danger"
                data-action="click->dashboard#confirmDelete"
                data-dashboard-target="confirmDeleteBtn"
            >
                Delete Snippet
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Dashboard JavaScript included in main app bundle #}
    
    <script>
        // Initialize dashboard data
        window.dashboardConfig = {
            userId: {{ app.user.id }},
            refreshInterval: 30000, // 30 seconds
            autoRefreshStats: true,
            filters: {
                language: '',
                status: '',
                sort: 'recent'
            }
        };
        
        // Auto-refresh stats every 30 seconds
        document.addEventListener('DOMContentLoaded', function() {
            setInterval(function() {
                if (window.dashboardController) {
                    window.dashboardController.refreshStats();
                }
            }, window.dashboardConfig.refreshInterval);
        });
    </script>
{% endblock %}