{#
 # Snippets Library Page - User's snippet collection
 # 
 # Advanced filtering, search, and grid layout with Tiptap-inspired design
#}

{% extends 'base.html.twig' %}

{% block title %}My Snippets - PrettiOps{% endblock %}
{% block body_class %}snippets-page{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-6">
        
        {# Page Header #}
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">My Snippets</h1>
                <p class="text-gray-600 mt-1">
                    {{ pagination.total }} snippet{{ pagination.total != 1 ? 's' : '' }} found
                </p>
            </div>
            
            <a 
                href="{{ path('app_editor') }}" 
                class="po-button btn-primary inline-flex items-center gap-2 px-6 py-3 bg-purple-600 text-white rounded-xl font-semibold hover:bg-purple-700 transition-all duration-300"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                New Snippet
            </a>
        </div>
        
        {# Filters Section #}
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-8">
            <form method="GET" class="space-y-4 md:space-y-0 md:flex md:items-center md:gap-4">
                
                {# Search Input #}
                <div class="flex-1">
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <input 
                            type="text" 
                            name="search" 
                            value="{{ filters.search }}"
                            placeholder="Search snippets by title or description..."
                            class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                        >
                    </div>
                </div>
                
                {# Language Filter #}
                <div class="md:w-48">
                    <select 
                        name="language"
                        class="block w-full py-3 px-3 border border-gray-300 bg-white rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                    >
                        <option value="">All Languages</option>
                        <option value="javascript" {{ filters.language == 'javascript' ? 'selected' : '' }}>JavaScript</option>
                        <option value="typescript" {{ filters.language == 'typescript' ? 'selected' : '' }}>TypeScript</option>
                        <option value="php" {{ filters.language == 'php' ? 'selected' : '' }}>PHP</option>
                        <option value="python" {{ filters.language == 'python' ? 'selected' : '' }}>Python</option>
                        <option value="java" {{ filters.language == 'java' ? 'selected' : '' }}>Java</option>
                        <option value="go" {{ filters.language == 'go' ? 'selected' : '' }}>Go</option>
                        <option value="rust" {{ filters.language == 'rust' ? 'selected' : '' }}>Rust</option>
                    </select>
                </div>
                
                {# Visibility Filter #}
                <div class="md:w-48">
                    <select 
                        name="visibility"
                        class="block w-full py-3 px-3 border border-gray-300 bg-white rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                    >
                        <option value="">All Visibility</option>
                        <option value="private" {{ filters.visibility == 'private' ? 'selected' : '' }}>Private</option>
                        <option value="public" {{ filters.visibility == 'public' ? 'selected' : '' }}>Public</option>
                        <option value="shared" {{ filters.visibility == 'shared' ? 'selected' : '' }}>Shared</option>
                    </select>
                </div>
                
                {# Filter Button #}
                <button 
                    type="submit"
                    class="po-button btn-secondary px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-medium hover:bg-gray-200 transition-all duration-300"
                >
                    Filter
                </button>
                
                {# Clear Filters #}
                {% if filters.search or filters.language or filters.visibility %}
                    <a 
                        href="{{ path('app_snippets') }}"
                        class="po-button btn-ghost px-4 py-3 text-gray-500 hover:text-gray-700 transition-all duration-300"
                    >
                        Clear
                    </a>
                {% endif %}
            </form>
        </div>
        
        {# Snippets Grid #}
        {% if snippets|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                {% for snippet in snippets %}
                    <div class="snippet-card bg-white rounded-2xl shadow-sm border border-gray-200 hover:shadow-lg transition-all duration-300 overflow-hidden group">
                        
                        {# Card Header #}
                        <div class="p-6 pb-4">
                            <div class="flex items-start justify-between mb-3">
                                <div class="flex-1 min-w-0">
                                    <h3 class="text-lg font-semibold text-gray-900 truncate group-hover:text-purple-600 transition-colors">
                                        <a href="{{ path('app_snippet_view', {id: snippet.id}) }}" class="hover:underline">
                                            {{ snippet.title }}
                                        </a>
                                    </h3>
                                    {% if snippet.description %}
                                        <p class="text-sm text-gray-600 mt-1 line-clamp-2">
                                            {{ snippet.description }}
                                        </p>
                                    {% endif %}
                                </div>
                                
                                {# Visibility Badge #}
                                <div class="ml-3">
                                    {% if snippet.visibility == 'public' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            Public
                                        </span>
                                    {% elseif snippet.visibility == 'shared' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            Shared
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                            Private
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {# Language and Stats #}
                            <div class="flex items-center gap-4 text-sm text-gray-500">
                                <div class="flex items-center gap-1">
                                    <div class="w-3 h-3 rounded-full bg-purple-500"></div>
                                    <span class="capitalize">{{ snippet.language }}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    <span>{{ snippet.viewCount }}</span>
                                </div>
                            </div>
                        </div>
                        
                        {# Code Preview #}
                        <div class="px-6 pb-4">
                            <div class="code-preview bg-gray-900 rounded-lg p-3 text-sm font-mono overflow-hidden">
                                <pre class="text-green-400 line-clamp-3"><code>{{ snippet.content|slice(0, 120) }}{% if snippet.content|length > 120 %}...{% endif %}</code></pre>
                            </div>
                        </div>
                        
                        {# Card Footer #}
                        <div class="px-6 py-4 bg-gray-50 flex items-center justify-between">
                            <span class="text-xs text-gray-500">
                                Updated {{ snippet.updatedAt|date('M j, Y') }}
                            </span>
                            
                            <div class="flex items-center gap-2">
                                <a 
                                    href="{{ path('app_editor_edit', {id: snippet.id}) }}"
                                    class="text-gray-400 hover:text-purple-600 transition-colors"
                                    title="Edit snippet"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>
                                <button 
                                    class="text-gray-400 hover:text-red-600 transition-colors"
                                    title="Delete snippet"
                                    onclick="confirmDelete('{{ snippet.id }}', '{{ snippet.title }}')"
                                >
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            {# Pagination #}
            {% if pagination.pages > 1 %}
                <div class="flex items-center justify-center">
                    <nav class="flex items-center gap-2">
                        {% if pagination.page > 1 %}
                            <a 
                                href="{{ path('app_snippets', filters|merge({page: pagination.page - 1})) }}"
                                class="px-3 py-2 text-sm text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-all"
                            >
                                Previous
                            </a>
                        {% endif %}
                        
                        {% for page in 1..pagination.pages %}
                            {% if page == pagination.page %}
                                <span class="px-3 py-2 text-sm bg-purple-600 text-white rounded-lg">
                                    {{ page }}
                                </span>
                            {% else %}
                                <a 
                                    href="{{ path('app_snippets', filters|merge({page: page})) }}"
                                    class="px-3 py-2 text-sm text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-all"
                                >
                                    {{ page }}
                                </a>
                            {% endif %}
                        {% endfor %}
                        
                        {% if pagination.page < pagination.pages %}
                            <a 
                                href="{{ path('app_snippets', filters|merge({page: pagination.page + 1})) }}"
                                class="px-3 py-2 text-sm text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-all"
                            >
                                Next
                            </a>
                        {% endif %}
                    </nav>
                </div>
            {% endif %}
            
        {% else %}
            {# Empty State #}
            <div class="text-center py-16">
                <div class="w-24 h-24 bg-gray-100 rounded-2xl mx-auto mb-6 flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {% if filters.search or filters.language or filters.visibility %}
                        No snippets found
                    {% else %}
                        No snippets yet
                    {% endif %}
                </h3>
                <p class="text-gray-600 mb-6 max-w-md mx-auto">
                    {% if filters.search or filters.language or filters.visibility %}
                        Try adjusting your filters or search terms to find what you're looking for.
                    {% else %}
                        Create your first beautiful code snippet to get started with PrettiOps.
                    {% endif %}
                </p>
                
                {% if not (filters.search or filters.language or filters.visibility) %}
                    <a 
                        href="{{ path('app_editor') }}" 
                        class="po-button btn-primary inline-flex items-center gap-2 px-6 py-3 bg-purple-600 text-white rounded-xl font-semibold hover:bg-purple-700 transition-all duration-300"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Create Your First Snippet
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

{# Delete Confirmation Modal #}
<div id="delete-modal" class="fixed inset-0 z-50 hidden bg-gray-900 bg-opacity-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-xl max-w-md w-full p-6">
        <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Delete Snippet</h3>
        </div>
        
        <p class="text-gray-600 mb-6">
            Are you sure you want to delete "<span id="delete-snippet-title" class="font-medium"></span>"? 
            This action cannot be undone.
        </p>
        
        <div class="flex gap-3 justify-end">
            <button 
                onclick="closeDeleteModal()"
                class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-all"
            >
                Cancel
            </button>
            <button 
                id="confirm-delete-btn"
                class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all"
            >
                Delete
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block page_scripts %}
<script>
function confirmDelete(snippetId, snippetTitle) {
    document.getElementById('delete-snippet-title').textContent = snippetTitle;
    document.getElementById('delete-modal').classList.remove('hidden');
    
    document.getElementById('confirm-delete-btn').onclick = function() {
        // Here you would typically send a DELETE request to your API
        console.log('Deleting snippet:', snippetId);
        closeDeleteModal();
        
        // Show success message
        if (window.notificationManager) {
            window.notificationManager.success('Snippet deleted successfully');
        }
        
        // Refresh the page or remove the snippet card from DOM
        location.reload();
    };
}

function closeDeleteModal() {
    document.getElementById('delete-modal').classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('delete-modal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeDeleteModal();
    }
});

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeDeleteModal();
    }
});
</script>
{% endblock %}