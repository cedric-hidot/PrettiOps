{#
 # Single Snippet View Page
 # 
 # Public and private snippet display with sharing options
#}

{% extends 'base.html.twig' %}

{% block title %}{{ snippet.title }} - PrettiOps{% endblock %}
{% block body_class %}snippet-view-page{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-5xl mx-auto px-6">
        
        {# Header with Actions #}
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-8">
            <div class="flex items-start justify-between">
                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 mb-2">
                        <h1 class="text-2xl font-bold text-gray-900">{{ snippet.title }}</h1>
                        
                        {# Visibility Badge #}
                        {% if snippet.visibility == 'public' %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Public
                            </span>
                        {% elseif snippet.visibility == 'shared' %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                                </svg>
                                Shared
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Private
                            </span>
                        {% endif %}
                    </div>
                    
                    {% if snippet.description %}
                        <p class="text-gray-600 mb-4">{{ snippet.description }}</p>
                    {% endif %}
                    
                    {# Metadata #}
                    <div class="flex items-center gap-6 text-sm text-gray-500">
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-purple-500"></div>
                            <span class="capitalize">{{ snippet.language }}</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            <span>{{ snippet.viewCount }} views</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>Updated {{ snippet.updatedAt|date('M j, Y') }}</span>
                        </div>
                        <div class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span>{{ snippet.user.username }}</span>
                        </div>
                    </div>
                </div>
                
                {# Actions #}
                <div class="flex items-center gap-3 ml-6">
                    {% if is_owner %}
                        <a 
                            href="{{ path('app_editor_edit', {id: snippet.id}) }}"
                            class="po-button btn-secondary inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Edit
                        </a>
                        
                        <button 
                            onclick="showShareModal()"
                            class="po-button btn-secondary inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                            </svg>
                            Share
                        </button>
                    {% endif %}
                    
                    <button 
                        onclick="copyToClipboard()"
                        class="po-button btn-primary inline-flex items-center gap-2 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-all"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        Copy Code
                    </button>
                </div>
            </div>
        </div>
        
        {# Code Display #}
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
            {# Code Header #}
            <div class="bg-gray-900 px-6 py-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="flex gap-2">
                        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                    </div>
                    <span class="text-gray-400 text-sm font-mono">{{ snippet.title|lower|replace({' ': '_'}) }}.{{ snippet.language }}</span>
                </div>
                
                <div class="flex items-center gap-2">
                    <span class="text-gray-400 text-sm">{{ snippet.content|split('\n')|length }} lines</span>
                    <button 
                        onclick="copyToClipboard()"
                        class="text-gray-400 hover:text-white transition-colors p-1"
                        title="Copy to clipboard"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            {# Code Content #}
            <div class="bg-gray-900 text-white p-6 overflow-x-auto">
                <pre class="font-mono text-sm leading-relaxed"><code id="snippet-code" class="language-{{ snippet.language }}">{{ snippet.content }}</code></pre>
            </div>
        </div>
        
        {# Additional Actions #}
        <div class="mt-8 flex items-center justify-between">
            <div class="flex items-center gap-4">
                {% if user and not is_owner %}
                    <button 
                        onclick="forkSnippet()"
                        class="po-button btn-secondary inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                        Fork Snippet
                    </button>
                {% endif %}
                
                <button 
                    onclick="downloadSnippet()"
                    class="po-button btn-secondary inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Download
                </button>
            </div>
            
            <div class="flex items-center gap-4">
                {% if user %}
                    <a 
                        href="{{ path('app_snippets') }}"
                        class="text-gray-500 hover:text-gray-700 transition-colors"
                    >
                        ← Back to My Snippets
                    </a>
                {% else %}
                    <a 
                        href="{{ path('app_register') }}"
                        class="text-purple-600 hover:text-purple-700 font-medium transition-colors"
                    >
                        Sign up to create your own snippets →
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Share Modal #}
{% if is_owner %}
<div id="share-modal" class="fixed inset-0 z-50 hidden bg-gray-900 bg-opacity-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-xl max-w-md w-full p-6">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-semibold text-gray-900">Share Snippet</h3>
            <button 
                onclick="hideShareModal()"
                class="text-gray-400 hover:text-gray-600 transition-colors"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Share URL</label>
                <div class="flex gap-2">
                    <input 
                        type="text" 
                        id="share-url"
                        value="{{ url('app_snippet_view', {id: snippet.id}) }}"
                        readonly
                        class="flex-1 px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-sm"
                    >
                    <button 
                        onclick="copyShareUrl()"
                        class="px-3 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-all"
                    >
                        Copy
                    </button>
                </div>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Visibility</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="private" {{ snippet.visibility == 'private' ? 'selected' : '' }}>Private - Only you can access</option>
                    <option value="shared" {{ snippet.visibility == 'shared' ? 'selected' : '' }}>Shared - Anyone with link can access</option>
                    <option value="public" {{ snippet.visibility == 'public' ? 'selected' : '' }}>Public - Visible to everyone</option>
                </select>
            </div>
            
            <div class="flex gap-3 pt-4">
                <button 
                    onclick="updateVisibility()"
                    class="flex-1 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-all"
                >
                    Update Settings
                </button>
                <button 
                    onclick="hideShareModal()"
                    class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-all"
                >
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}

{% block page_scripts %}
<script>
// Copy snippet code to clipboard
function copyToClipboard() {
    const code = document.getElementById('snippet-code').textContent;
    
    if (navigator.clipboard) {
        navigator.clipboard.writeText(code).then(function() {
            if (window.notificationManager) {
                window.notificationManager.success('Code copied to clipboard!');
            }
        });
    } else {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = code;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        if (window.notificationManager) {
            window.notificationManager.success('Code copied to clipboard!');
        }
    }
}

// Download snippet as file
function downloadSnippet() {
    const code = document.getElementById('snippet-code').textContent;
    const filename = '{{ snippet.title|lower|replace({" ": "_"}) }}.{{ snippet.language }}';
    
    const blob = new Blob([code], { type: 'text/plain' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    window.URL.revokeObjectURL(url);
    
    if (window.notificationManager) {
        window.notificationManager.success('Snippet downloaded!');
    }
}

// Fork snippet (create a copy)
function forkSnippet() {
    const url = new URL('{{ path("app_editor") }}', window.location.origin);
    url.searchParams.set('fork', '{{ snippet.id }}');
    window.location.href = url.toString();
}

{% if is_owner %}
// Share modal functions
function showShareModal() {
    document.getElementById('share-modal').classList.remove('hidden');
}

function hideShareModal() {
    document.getElementById('share-modal').classList.add('hidden');
}

function copyShareUrl() {
    const shareUrl = document.getElementById('share-url');
    shareUrl.select();
    document.execCommand('copy');
    
    if (window.notificationManager) {
        window.notificationManager.success('Share URL copied to clipboard!');
    }
}

function updateVisibility() {
    // Here you would typically send a request to update the snippet visibility
    console.log('Updating snippet visibility...');
    
    if (window.notificationManager) {
        window.notificationManager.success('Visibility settings updated!');
    }
    
    hideShareModal();
}

// Close modal when clicking outside
document.getElementById('share-modal').addEventListener('click', function(e) {
    if (e.target === this) {
        hideShareModal();
    }
});
{% endif %}

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        {% if is_owner %}
        hideShareModal();
        {% endif %}
    }
});

// Syntax highlighting (you would typically use Prism.js or similar)
document.addEventListener('DOMContentLoaded', function() {
    // Initialize syntax highlighting if library is loaded
    if (window.Prism) {
        Prism.highlightAll();
    }
});
</script>
{% endblock %}