{
    "name": "prettiops",
    "version": "1.0.0",
    "description": "PrettiOps - Modern Code Email Platform",
    "main": "index.js",
    "scripts": {
        "dev-server": "encore dev-server",
        "dev": "encore dev",
        "watch": "encore dev --watch",
        "build": "encore production --progress",
        "analyze": "encore production --analyze",
        "type-check": "tsc --noEmit",
        "lint": "eslint assets/**/*.{js,ts} --fix",
        "lint:check": "eslint assets/**/*.{js,ts}",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format": "prettier --write \"assets/**/*.{js,ts,css,scss,json}\"",
        "format:check": "prettier --check \"assets/**/*.{js,ts,css,scss,json}\"",
        "quality": "npm run type-check && npm run lint:check && npm run test && npm run format:check"
    },
    "devDependencies": {
        "@babel/core": "^7.17.0",
        "@babel/preset-env": "^7.16.0",
        "@hotwired/stimulus": "^3.2.2",
        "@hotwired/turbo": "^8.0.13",
        "@symfony/stimulus-bridge": "^3.2.0",
        "@symfony/webpack-encore": "^4.0.0",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@types/prismjs": "^1.26.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.0.0",
        "core-js": "^3.23.0",
        "css-loader": "^6.0.0",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "file-loader": "^6.0.0",
        "jest": "^29.0.0",
        "mini-css-extract-plugin": "^2.0.0",
        "monaco-editor": "^0.45.0",
        "postcss": "^8.4.0",
        "postcss-loader": "^7.0.0",
        "prettier": "^3.0.0",
        "regenerator-runtime": "^0.13.9",
        "sass": "^1.70.0",
        "sass-loader": "^13.0.0",
        "tailwindcss": "^3.4.17",
        "ts-loader": "^9.0.0",
        "typescript": "^5.0.0",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.0.0",
        "webpack-notifier": "^1.15.0"
    },
